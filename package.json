{
  "name": "web-creator",
  "version": "1.0.0",
  "description": "Webpack enhanced SSG",
  "private": true,
  "main": "index.js",
  "scripts": {
    "serve": "webpack -c webpack.dev.js",
    "build": "webpack -c webpack.prod.js",
    "eslint": "eslint source/components source/js",
    "eslint:fix": "eslint source/components source/js --fix",
    "stylelint": "stylelint \"src/scss/**/*.scss\" --syntax scss",
    "lint": "run-s stylelint eslint",
    "browserslist": "npx browserslist@latest --update-db",
    "stats": "webpack --config webpack.prod.js --profile --json > stats.json && webpack-bundle-analyzer stats.json",
    "foo": "echo FOO!"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run foo"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rozacp/web-creator.git"
  },
  "keywords": [
    "webpack"
  ],
  "author": "Peter Ro≈æac",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rozacp/web-creator/issues"
  },
  "homepage": "https://github.com/rozacp/web-creator#readme",
  "devDependencies": {
    "clean-webpack-plugin": "^3.0.0",
    "husky": "^5.1.1",
    "npm-run-all": "^4.1.5",
    "webpack": "^5.24.2",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  }
}
